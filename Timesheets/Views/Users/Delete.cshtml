@model MyUser
@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>


<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Model.FirstName
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LastName)
        </dt>
        <dd class="col-sm-10">
            @Model.LastName
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CostPerHour)
        </dt>
        <dd class="col-sm-10">
            @Model.CostPerHour
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Department)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Department != null)
            {
                @Model.Department.Name
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Manager)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Manager != null)
            {
                @Model.Manager.FirstName}
             
            @if (Model.Manager != null) { 
            @Model.Manager.LastName
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Model.Email
        </dd>
        <dt class="col-sm-2">
            Roles
        </dt>
        <dd class="col-sm-10">
            @foreach (string role in ViewBag.Roles)
            {
                @role <br>
            }
        </dd>
    </dl>
    <form asp-action="Delete" id="form1">
        <input type="hidden" asp-for="Id" />
        <input  type="submit" value="Delete" class="btn btn-danger" onclick="Myconfirm()" /> |
        <a asp-action="Index">Back to List</a>
    </form>
    <script>
        function Myconfirm() {
            var answer = window.confirm("This will delete all Timesheets related to this user. Do you want to continue?")
            if (answer) {
                $("#form1").submit();
            }
            else {
                return false;
            }
        }
    </script>
    
</div>
